<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" 
          xmlns="http://javafx.com/javafx/21.0.6"
          fx:controller="view.SearchDialogController"
          hgap="10" vgap="10">
    <padding>
    	<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>
    
    <Label text="Start Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <DatePicker fx:id="startDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    
    <Label text="End Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <Label text="Tag Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="tagTypeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label text="Tag Value:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="tagValueField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <Button text="Search" onAction="#handleSearch" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button text="Cancel" onAction="#handleCancel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
