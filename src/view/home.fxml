<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<TilePane xmlns:fx="http://javafx.com/fxml" fx:controller="view.AlbumsController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Album Folder 1 -->
    <VBox spacing="5" onMouseClicked="#handleAlbumClick" style="-fx-cursor: hand;">
        <children>
            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <image>
                    <Image url="@folder_icon.png"/>
                </image>
            </ImageView>
            <Label text="Vacation 2024"/>
        </children>
    </VBox>
    
    <!-- Album Folder 2 -->
    <VBox spacing="5" onMouseClicked="#handleAlbumClick" style="-fx-cursor: hand;">
        <children>
            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <image>
                    <Image url="@folder_icon.png"/>
                </image>
            </ImageView>
            <Label text="Family"/>
        </children>
    </VBox>
    
    <!-- Add more album folders as needed -->
</TilePane>
