<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<TitledPane fx:id="loginPane" animated="false" prefHeight="400.0" prefWidth="600.0" text="Log In"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.6"
            fx:controller="view.LoginController"
            stylesheets="@application.css"
            style="-fx-background-color: transparent; -fx-border-color: transparent;">
   <content>    
      <GridPane alignment="CENTER" hgap="10" vgap="10" prefHeight="312.0" prefWidth="598.0">
         <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="400.0" />
         </columnConstraints>
         <rowConstraints>
            <!-- Row for the username label and input (with error message above the TextField) -->
            <RowConstraints minHeight="10.0" prefHeight="70.0" />
            <!-- Row for the buttons -->
            <RowConstraints minHeight="10.0" prefHeight="50.0" />
         </rowConstraints>
         <children>
            <!-- Username label in column 0, row 0 -->
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   alignment="CENTER_RIGHT" />
            <!-- VBox in column 1, row 0 for error label and TextField -->
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <children>
                  <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
                  <!-- onAction added so Enter in the text field triggers submit -->
                  <TextField fx:id="username" onAction="#handleSubmitAction" prefHeight="38.0" prefWidth="226.0"/>
               </children>
            </VBox>
            <!-- HBox in column 1, row 1 for buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <!-- defaultButton attribute added so the button is triggered on Enter -->
                  <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSubmitAction"
                          prefHeight="27.0" prefWidth="141.0" style="-fx-background-color: #ABFCFA;"
                          text="Log In"/>
                  <Button fx:id="signupButton" mnemonicParsing="false" onAction="#handleSignUp"
                          prefHeight="27.0" prefWidth="141.0" style="-fx-background-color: #148BF0;"
                          text="Sign Up"/>
               </children>
            </HBox>
         </children>
      </GridPane>
   </content>
</TitledPane>
