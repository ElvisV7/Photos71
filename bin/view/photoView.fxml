<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="view.PhotoViewController">
    <top>
        <Button fx:id="uploadPhotoButton" text="Upload Photo" onAction="#handleUploadPhoto" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <TilePane fx:id="photoTilePane" hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button text="Back" onAction="#handleBack"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
