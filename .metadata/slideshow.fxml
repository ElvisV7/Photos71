<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.6"
            fx:controller="view.SlideshowController">
    <center>
        <StackPane fx:id="photoDisplayPane" alignment="CENTER">
            <ImageView fx:id="photoView" preserveRatio="true" />
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <children>
                <Button text="Previous" onAction="#handlePrevious"/>
                <Button text="Next" onAction="#handleNext"/>
                <Button text="Exit" onAction="#handleExit"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
